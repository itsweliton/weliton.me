---
import Movie from './../components/Movie.astro';
import Layout from "../layouts/Layout.astro";

import { getCollection } from "astro:content";

const allMovies = await getCollection("movies");
---


<Layout title="Movies" pageTitle="My Favorite movies">
    <div class="flex flex-row justify-between mb-6">
      {
        allMovies.slice(0,3).map((movie) => (
          <Movie {...movie.data} />
        ))
      }
    </div>
    <div>
      {
      allMovies.slice(3).map((movie) => (
        <li class="mb-4 flex justify-between items-center text-sm border-b-2 border-gray-800 pb-2 transition duration-300 ease-in-out hover:text-neutral-400">
          <p>{movie.data.title}</p>
          <span class="font-mono capitalize">{movie.data.director} ~ {new Date(`${movie.data.releaseDate}`).getFullYear()}</span>
        </li>
      ))}
    </div>
</Layout>